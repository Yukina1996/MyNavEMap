<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wang.mynavemap.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.esri.arcgisruntime.mapping.view.MapView>

    <Button
        android:id="@+id/m_btnDirect"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Direct"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="383dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/m_btnRoute"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Route"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="447dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/m_btnMulti"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Multi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="319dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/m_btnClosestFacilities"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="最近设施"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="255dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
